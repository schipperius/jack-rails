<!--  Article Admin
  ===================================================== -->
	<% title "Articles" %>
	<hgroup class="hgroup">
		<h1><span>Articles</span></h1>
	</hgroup>

  <ul class="nav nav-pills">
		<% if can? :create, Article %>
  	<li><%= link_to 'Back', articles_path %></li>
		<li><%= link_to 'Edit', edit_article_path(@article) %></li>
		<li><%= link_to 'Destroy', @article, confirm: 'Are you sure?', method: :delete %> </li>
		<% end %>
  </ul>

  <!-- Article
  ======================================================= -->
  <article class="row-fluid">
    <div class="span12 columns">

      <!-- Article Header
      ================================================= -->
      <header class="row-fluid span12 page-header">
        <section class="span4 pull-left article-image">

          <%#= raw @article.title_image %>
					<ul class="thumbnails">
					  <li>
					    <div class="thumbnail">
					      <img src="http://placehold.it/300x225" alt="" title=""
					width="300" height="225" />
					      <br />
					      <sup id="fnref:1.1" class="footnote pull-right">
					        <a href="#fn:1.1">[1]</a>
					      </sup>
					    </div>
					  </li>
					</ul>
       	</section>

        <section class="span8 pull-right article-text">
          <h3 class="article-position">
            <strong>
              <span>#<%= @article.position %> - </span>
              <span><%= @article.title %></span>
            </strong>
          </h3>
          <h4 class="article-sub-title">
            <%= @article.published_at.strftime('%b %d, %Y') %> |
            <%= link_to "tag 1", root_url %> |
            <%= link_to "tag 2", root_url %> |
            <%= link_to "tag 3", root_url %>
          </h4>
          <br/>
          <div class="article-intro">
            <%= raw @article.intro %>
          </div>
					<br />
	        <ul class="pull-right">
	          <%= content_tag :li, link_to("Previous Article", @article.previous), :class => "previous btn" if @article.previous %>
	          <%= content_tag :li, link_to("Next Article", @article.next), :class => "next btn" if !@article.last_published? && @article.next %>
	        </ul>

				</section>
      </header>

      <!-- Article Navigation
      ================================================= -->
      <section id="tabs" class="article-nav">
        <div class="tabbable">

          <ul class="nav nav-pills">
            <li class="active"><a href="#1" data-toggle="tab">
            <%= @article.title %></a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="1">
              <!-- Article Sections
              ======================================================= -->
						  <p><%= @article.sec1 %></p>
						  <p><%= @article.sec2 %></p>
						  <p><%= @article.sec3 %></p>

              <!-- Article Footnotes
              ======================================================= -->
						  <p><%= @article.footnotes %></p>
            </div>
         </div>

        </div>
      </section>

    </div>
  </article>
